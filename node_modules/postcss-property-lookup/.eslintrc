{
  "rules": {
    "no-unused-expressions": [0],
    "no-underscore-dangle":  [0],
    "no-multi-spaces":       [0],
    "no-extra-parens":       [2],
    "no-unused-vars":        [2],
    "no-use-before-define":  [0],
    "no-loop-func":          [0],
    "key-spacing":           [0],
    "max-len":               [0],
    "strict":                [0],
    "indent":                [0],
    "quotes":                [2, "single", "avoid-escape"],
    "curly":                 [0]
  },
  "ecmaFeatures": {
    "blockBindings": true,
    "modules": true,
    "objectLiteralShorthandMethods": true,
    "destructuring": true,
    "arrowFunctions": true,
    "templateStrings": true
  },
  "env": {
    "node":  true
  }
}
