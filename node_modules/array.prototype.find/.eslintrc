{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": [2, { "min": 1, "max": 25, "properties": "never" }],
		"max-statements": [2, 12],
		"max-statements-per-line": [2, { "max": 2 }],
		"max-params": 0,
		"new-cap": [2, {
			"capIsNewExceptions": ["ToInteger", "ToObject", "ToString", "ToLength", "IsCallable", "Call", "RequireObjectCoercible"]
		}],
		"no-magic-numbers": 0
	}
}
