{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"eqeqeq": [2, "allow-null"],
		"func-name-matching": 1,
		"id-length": [2, { "min": 1, "max": 30 }],
		"max-statements": [2, 13],
		"max-statements-per-line": [2, { "max": 2 }],
		"no-magic-numbers": 0,
		"new-cap": 0,
		"no-extra-parens": 1,
		"sort-keys": 0
	}
}
